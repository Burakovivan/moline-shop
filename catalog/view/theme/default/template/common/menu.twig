			<div class="green_menu">
			<div class="container cpn-xs">
				<div class="col-lg-4 col-md-3 col-sm-4 col-xs-3 col-plrn-xs flex-wrap pln prn mob_p_static">
					<div class="mnu_button_wrap">
						<input type="checkbox" class="openSidebarMenu" id="openSidebarMenu">
						<label for="openSidebarMenu" class="sidebarIconToggle">
							<div class="spinner diagonal part-1"></div>
							<div class="spinner horizontal"></div>
							<div class="spinner diagonal part-2"></div>
						</label>
							<div id="sidebarMenu">
								{% if categories %} 
								<ul class="sidebarMenuInner">
									{% for category in categories %}
										<li class ="main-item">
										<a href="{{ category.href }}">
										<div class="icon_mnu_wrap">
										{% if category.image %}
										 <img src="image/{{category.image}}" alt="">
										 {% endif %}
										 </div>
										 	<p>{{ category.name }}</p><i class="fas fa-angle-right"></i>
										 </a>

											{% if category.children %}
												{% for children in category.children|batch(category.children|length / category.column|round(1, 'ceil')) %}
												<div class="inner-list-wrap">
													<ul class="inner-list">
														<li class="sub-item back_btn_mnu" ><a href="#" class="back_b"><p>Назад</p></a></li>
														{% for child in children %}
															{% if child.image %}
																<li class="sub-item"><a href="{{ child.href }}"><div class="img_wrap"><img src="image/{{ child.image }}" alt=""></div><p>{{ child.name }}</p></a></li>
															{% else %}
																<li class="sub-item"><a href="{{ child.href }}"><div class="img_wrap"><img alt=""></div><p>{{ child.name }}</p></a></li>
															{% endif %}
														{% endfor %}
													</ul>
												</div>
													{% endfor %}
											{% endif %}
										</li>
									{% endfor %}
								</ul>
									
								<div class="bottom_link">
									<a href="#" ><img src="img/cat_icon/file.svg" alt="">Скачать прайс-лист</a>
								</div>
								{% endif %}
							</div>
							<label for="openSidebarMenu" class="l_cat_wrap">
									<div class="catalog hide_mnu_item_sm">Каталог товаров</div>
								</label>
					</div>
				</div>
				
