{% for product in products %}
	<div class="item_wrap product col-md-4 col-xs-6 col-sm-3" id='product_{{ product.product_id }}' data-product-id="{{ product.product_id }}">
		<div class=" top_info">
			<div class="pln col-md-6 col-xs-5">
				{% if product.discount %}
										<div class="bage_green bage">-{{product.discount}}%</div>
									{% elseif product.bestseller %}
										<div class="bage_blue bage">Хит</div>
									{% elseif  product.latest %}
										<div class="bage_blue_new bage">New</div>
									{% else %}
										<div class="bage"></div>
									{% endif %}
			</div>
			<div class="prn col-md-6 col-xs-7">
				<div class="itm_artic_wrap">
			{{ product.sku }}
				</div>
			</div>
		</div>
		<div class="row">
			<a href="{{product.href}}">
				<div class="col-md-12 itm_img_wrap">
					<img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}">
				</div>
			</a>
			<div class="col-md-12 h_wrap">
				<h4><a href="{{product.href}}">{{ product.name }}	</a></h4>
			</div>
			<div class="col-md-12 p_wrap">
				{% if product.price %}
					{% if not product.special %}
					<div class="price">{{ product.price }}</div>
					{% else %}
					<div class="price">{{ product.special }}
						<div class="old_price visible-sm">{{ product.price }}</div>
					</div>
					{% endif %}
				{% endif %}
			</div>
			<div class="col-md-6 col-sm-12  pr-lg-right cw_wrp">
				<div class="counter_wrap">
					<div class="cw_inner">
						<span class="input-number-decrement">–</span><input class="input-number" readonly type="text" value="{{ product.minimum }}" min="{{ product.minimum }}" ><span class="input-number-increment">+</span>
					</div>
				</div>
			</div>
			<div class="col-md-6 col-sm-12 btn_buy_wrap btn_buy_wrap_link">
				<button onclick="cart.add('{{ product.product_id }}', $(this).parent().parent().find('.input-number').val());" class="btn_buy primary_btn">{{ button_cart }}</button>
			</div>
			<div class="ost col-sm-12 pln ct_hide">{{ product.maximum }} ед. остаток на складе</div>
			<div class="limit ct_hide">от <span class="amount_lim">{{ product.minimum }} ед.</span><span class="hidd_mobile">минимальный заказ</span></div>
			<div class="retail_price ct_hide">Рекомендуемая розничная цена
				<div class="price">{{product.retail_price}}
					{# <span class="currency">грн</span> #}
				</div>
			</div>
		</div>
	</div>
{% endfor %}